<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/ll_tab_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab_home_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/tv_tab_home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="主页"
            android:textColor="@color/main_tab_text"
            android:textSize="@dimen/common_font_size_sm_10"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tab_new_message_count"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_new_msg"
        android:minWidth="12dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/common_base_head"
        android:textSize="@dimen/common_font_size_sm_10"
        android:textStyle="bold" />

</RelativeLayout>