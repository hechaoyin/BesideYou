<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <com.example.hbz.besideyou.view.CircleImageView
            android:id="@+id/iv_user_face"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/ic_login_face" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="傲帝小卒"
            android:textColor="@color/common_font_black"
            android:textSize="14sp" />
    </LinearLayout>

    <include
        android:id="@+id/halving_line"
        layout="@layout/common_line_match_gray" />
</LinearLayout>